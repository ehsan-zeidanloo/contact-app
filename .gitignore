.container {  
  width: 100%;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
  background-color: #f5f5f5;  /* <--- اضافه: رنگ زمینه روشن */  
  padding: 20px;  /* <--- اضافه: فاصله داخلی */  
}  

.form {  
  display: flex;  
  flex-wrap: wrap;  
  justify-content: space-between;  /* <--- اصلاح: توزیع بهتر ورودی ها */  
  align-items: center;  
  padding: 20px;  
  border-radius: 20px;  
  margin-bottom: 20px;  
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);  /* <--- اصلاح: سایه نرم‌تر */  
  background-color: #ffffff;  /* <--- اضافه: پس‌زمینه سفید */  
}  

.form input {  
  width: 45%;  
  margin: 10px;  
  border: 1px solid #ccc;  /* <--- اصلاح: مرز روشن‌تر */  
  border-radius: 10px;  
  padding: 10px;  
  transition: border-color 0.3s;  /* <--- اضافه: انیمیشن نرم */  
}  

.form input:focus {  
  border-color: #304ffe;  /* <--- اضافه: تغییر رنگ مرز هنگام فوکوس */  
}  

.form button {  
  width: calc(90% + 20px);  
  margin: 20px auto;  
  border: none;  
  border-radius: 15px;  
  padding: 10px;  
  color: #fff;  /* <--- اصلاح: رنگ متن سفید */  
  background-color: #304ffe;  /* <--- اصلاح: رنگ پس‌زمینه */  
  font-size: 1.5rem;  
  font-weight: 500;  
  transition: 0.3s;  /* <--- اصلاح: انیمیشن نرم‌تر */  
}  

.form button:hover {  
  background-color: #233ece;  /* <--- اصلاح: رنگ پس‌زمینه هنگام hover */  
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);  /* <--- اصلاح: سایه در hover */  
}  

.alert {  
  width: 100%;  
  height: 40px;  
  margin: 5px 0 25px;  
  text-align: center;  
}  

.alert p {  
  background-color: #ffebee;  /* <--- اصلاح: رنگ پس‌زمینه هشدار */  
  color: #f44336;  
  width: 100%;  
  padding: 10px;  
  font-size: 1.2rem;  
  border-radius: 10px;  
}  

@media (max-width: 500px) {  
  .form input {  
    width: 90%;  /* <--- تغییر: ورودی‌ها در اندازه موبایل */  
  }  
  .form button {  
    width: 90%;  /* <--- تغییر: دکمه‌ها در اندازه موبایل */  
  }  
}